{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "quoteProps": "as-needed",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["*.md"],
            "options": { "proseWrap": "preserve" }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": { "singleQuote": false }
        }
    ]
}
